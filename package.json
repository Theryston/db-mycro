{
  "name": "db-mycro",
  "version": "0.0.0",
  "description": "a database that saves your data in a json file in your project folder.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --declaration",
    "dev": "nodemon --watch src --exec \"ts-node-dev src/index.ts\" -e ts",
    "test": "nodemon --watch src --exec \"ts-node-dev src/**.test.ts\" -e ts",
    "test:repository": "nodemon --watch src --exec \"ts-node-dev src/repository/repository.test.ts\" -e ts",
    "test:database": "nodemon --watch src --exec \"ts-node-dev src/database/database.test.ts\" -e ts"
  },
  "repository": "https://github.com/Theryston/db-mycro.git",
  "author": "Theryston <funktodo2@gmail.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/node": "^14.14.41"
  }
}